# Local development environment variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Vite - REQUIRED)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Site URL for OAuth redirects (Vite - REQUIRED)
# For local development:
VITE_SITE_URL=http://localhost:5173
# For production, set this to:
# VITE_SITE_URL=https://myblipp.com

# Internal API Key (if needed)
VITE_INTERNAL_API_KEY=your-internal-api-key

# App Base URL
VITE_APP_BASE_URL=http://localhost:5173

# Feature flags
VITE_FEATURE_CONVERSATIONS_LITE=false

# Server-side only (used by run-migration.js). Do not commit real values.
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe Configuration (Vite - REQUIRED for checkout)
VITE_STRIPE_BASIC_PRICE_ID=price_basic_plan_id
VITE_STRIPE_PRO_PRICE_ID=price_pro_plan_id
VITE_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# Server-side Stripe (for API endpoints)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Next.js compatibility (if using Next.js)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
NEXT_PUBLIC_SITE_URL=http://localhost:3000